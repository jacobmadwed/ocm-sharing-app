{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "app",
  "description": "Capability for the main app with file and dialog access",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [{ "path": "$APPDATA/*" }]
    },
    {
      "identifier": "fs:allow-read-text-file", 
      "allow": [{ "path": "$APPDATA/*" }]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$APPDATA/*" }]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [{ "path": "$APPDATA" }]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DOWNLOADS/**" },
        { "path": "$DOCUMENTS/**" },
        { "path": "$PICTURES/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DOWNLOADS/**" },
        { "path": "$DOCUMENTS/**" },
        { "path": "$PICTURES/**" }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DOWNLOADS/**" },
        { "path": "$DOCUMENTS/**" },
        { "path": "$PICTURES/**" }
      ]
    },
    "dialog:allow-open",
    "dialog:default",
    "core:path:default"
  ]
}